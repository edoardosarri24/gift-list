# Gift List Environment Variables Template
# Copy this file to .env and fill in the values

# Databse
DATABASE_URL=postgresql://user:pass@db:5432/giftlist

# Backend API
PORT=3000
CORS_ORIGIN=https://giftlist.yourdomain.com

# Authentication
# Generate a secure random string (e.g. openssl rand -base64 32)
JWT_SECRET=your_super_secret_jwt_key_here

# Notifications (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_smtp_password

# Cloudflare Tunnel 
CLOUDFLARE_TOKEN=your_cloudflare_tunnel_token_here
